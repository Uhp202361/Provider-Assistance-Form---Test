    .row { display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; margin-bottom: 1rem; }
    .row > label { display: flex; flex-direction: column; font-size: 0.9rem; }
    .row > label.small-yesno { grid-column: span 2; }
